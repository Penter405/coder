{
  "name": "ai-coder-helper",
  "displayName": "AI Coder Helper",
  "description": "Help prepare code for AI coding assistants - select files, generate chat, apply changes",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "aiCoder.generateChat",
        "title": "AI Coder: Generate Chat",
        "icon": "$(export)"
      },
      {
        "command": "aiCoder.applyChanges",
        "title": "AI Coder: Apply Changes",
        "icon": "$(check)"
      },
      {
        "command": "aiCoder.refreshFiles",
        "title": "AI Coder: Refresh File List",
        "icon": "$(refresh)"
      },
      {
        "command": "aiCoder.selectAll",
        "title": "AI Coder: Select All Files",
        "icon": "$(check-all)"
      },
      {
        "command": "aiCoder.deselectAll",
        "title": "AI Coder: Deselect All Files",
        "icon": "$(close-all)"
      },
      {
        "command": "aiCoder.diffShadow",
        "title": "Review Changes (Diff)",
        "icon": "$(diff)"
      },
      {
        "command": "aiCoder.mergeShadow",
        "title": "Accept & Merge",
        "icon": "$(check)"
      },
      {
        "command": "aiCoder.discardShadow",
        "title": "Discard",
        "icon": "$(trash)"
      },
      {
        "command": "aiCoder.testShadow",
        "title": "Test (Run Shadow)",
        "icon": "$(beaker)"
      },
      {
        "command": "aiCoder.applyAllAndRun",
        "title": "Apply All & Run",
        "icon": "$(run-all)"
      },
      {
        "command": "aiCoder.runOriginal",
        "title": "Run Original",
        "icon": "$(play)"
      },
      {
        "command": "aiCoder.localPR",
        "title": "Local PR (Merge to Project)",
        "icon": "$(git-merge)"
      },
      {
        "command": "aiCoder.acceptInstruction",
        "title": "Accept Instruction",
        "icon": "$(check)"
      },
      {
        "command": "aiCoder.rejectInstruction",
        "title": "Reject Instruction",
        "icon": "$(close)"
      },
      {
        "command": "aiCoder.acceptAllInstructions",
        "title": "Accept All",
        "icon": "$(check-all)"
      },
      {
        "command": "aiCoder.rejectAllInstructions",
        "title": "Reject All",
        "icon": "$(clear-all)"
      },
      {
        "command": "aiCoder.syncShadow",
        "title": "Sync Project to Shadow",
        "icon": "$(sync)"
      },
      {
        "command": "aiCoder.newPR",
        "title": "New PR (Sync Shadow)",
        "icon": "$(git-pull-request)"
      },
      {
        "command": "aiCoder.acceptInstructionInline",
        "title": "Accept Instruction (Inline)"
      },
      {
        "command": "aiCoder.rejectInstructionInline",
        "title": "Reject Instruction (Inline)"
      },
      {
        "command": "aiCoder.toggleShadowDiff",
        "title": "Toggle Shadow Diff Highlights",
        "icon": "$(diff-multiple)"
      },
      {
        "command": "aiCoder.selectDiffColorScheme",
        "title": "Select Diff Color Scheme",
        "icon": "$(symbol-color)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "aiCoder",
          "title": "AI Coder",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "aiCoder": [
        {
          "id": "aiCoderFiles",
          "name": "Opened Project",
          "type": "tree",
          "icon": "$(list-unordered)"
        },
        {
          "id": "aiCoderReview",
          "name": "Penter Instructions (Review)",
          "type": "tree",
          "icon": "$(checklist)"
        },
        {
          "id": "aiCoderShadow",
          "name": "Shadow Layer (Preview)",
          "type": "tree",
          "icon": "$(git-pull-request)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "aiCoder.generateChat",
          "when": "view == aiCoderFiles",
          "group": "navigation@1"
        },
        {
          "command": "aiCoder.newPR",
          "when": "view == aiCoderFiles",
          "group": "navigation@1.5"
        },
        {
          "command": "aiCoder.refreshFiles",
          "when": "view == aiCoderFiles",
          "group": "navigation@2"
        },
        {
          "command": "aiCoder.applyChanges",
          "when": "view == aiCoderFiles",
          "group": "navigation@3"
        },
        {
          "command": "aiCoder.acceptAllInstructions",
          "when": "view == aiCoderReview",
          "group": "navigation@1"
        },
        {
          "command": "aiCoder.rejectAllInstructions",
          "when": "view == aiCoderReview",
          "group": "navigation@2"
        },
        {
          "command": "aiCoder.applyAllAndRun",
          "when": "view == aiCoderShadow",
          "group": "navigation@1"
        },
        {
          "command": "aiCoder.runOriginal",
          "when": "view == aiCoderShadow",
          "group": "navigation@2"
        },
        {
          "command": "aiCoder.localPR",
          "when": "view == aiCoderShadow",
          "group": "navigation@3"
        },
        {
          "command": "aiCoder.toggleShadowDiff",
          "when": "view == aiCoderShadow",
          "group": "navigation@4"
        }
      ],
      "view/item/context": [
        {
          "command": "aiCoder.acceptInstruction",
          "when": "view == aiCoderReview && viewItem == instruction",
          "group": "inline@1"
        },
        {
          "command": "aiCoder.rejectInstruction",
          "when": "view == aiCoderReview && viewItem == instruction",
          "group": "inline@2"
        },
        {
          "command": "aiCoder.testShadow",
          "when": "view == aiCoderShadow && viewItem == shadowFile",
          "group": "inline@1"
        },
        {
          "command": "aiCoder.diffShadow",
          "when": "view == aiCoderShadow && viewItem == shadowFile",
          "group": "inline@2"
        },
        {
          "command": "aiCoder.mergeShadow",
          "when": "view == aiCoderShadow && viewItem == shadowFile",
          "group": "inline@3"
        },
        {
          "command": "aiCoder.discardShadow",
          "when": "view == aiCoderShadow && viewItem == shadowFile",
          "group": "inline@4"
        },
        {
          "command": "aiCoder.localPR",
          "when": "view == aiCoderShadow && viewItem == shadowFile",
          "group": "context@1"
        },
        {
          "command": "aiCoder.localPR",
          "when": "view == aiCoderShadow && viewItem == shadowFolder",
          "group": "context@1"
        },
        {
          "command": "aiCoder.diffShadow",
          "when": "view == aiCoderShadow && viewItem == shadowFile",
          "group": "context@2"
        },
        {
          "command": "aiCoder.discardShadow",
          "when": "view == aiCoderShadow && viewItem == shadowFile",
          "group": "context@3"
        },
        {
          "command": "aiCoder.discardShadow",
          "when": "view == aiCoderShadow && viewItem == shadowFolder",
          "group": "context@3"
        }
      ],
      "editor/title": [
        {
          "command": "aiCoder.applyChanges",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "aiCoder.applyChanges",
          "group": "aiCoder"
        }
      ]
    },
    "configuration": {
      "title": "AI Coder Helper",
      "properties": {
        "aiCoder.outputFile": {
          "type": "string",
          "default": "chat.txt",
          "description": "Output file name for generated chat"
        },
        "aiCoder.excludePatterns": {
          "type": "array",
          "default": [
            "node_modules",
            ".git",
            "__pycache__",
            "*.pyc",
            ".vscode"
          ],
          "description": "Patterns to exclude from file tree"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "18.x",
    "typescript": "^5.1.0"
  }
}